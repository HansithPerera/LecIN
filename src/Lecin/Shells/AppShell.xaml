<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="Lecin.Shells.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.SegmentedControl;assembly=Syncfusion.Maui.Toolkit"
    xmlns:viewModels="clr-namespace:Lecin.ViewModels"
    xmlns:teacher="clr-namespace:Lecin.Pages.Teacher"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:pages="using:Lecin.Pages"
    x:DataType="viewModels:AppShellViewModel"
    FlyoutBehavior="{Binding FlyoutBehavior}"
    Title="Lecin">

    <Shell.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </Shell.Resources>

    <ShellContent
        FlyoutItemIsVisible="False"
        ContentTemplate="{DataTemplate pages:LandingPage}" />

    <ShellContent
        Title="Login"
        FlyoutItemIsVisible="{Binding IsLoggedIn, Converter={StaticResource InvertedBoolConverter}}"
        ContentTemplate="{DataTemplate pages:LoginPage}" />

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate teacher:TeacherDashboardPage}"
        FlyoutItemIsVisible="{Binding IsTeacher}" />

    <ShellContent
        Title="Courses"
        FlyoutItemIsVisible="{Binding IsTeacher}"
        ContentTemplate="{DataTemplate teacher:TeacherCourseListPage}" />


    <Shell.FlyoutFooter>
        <Grid Padding="15" RowDefinitions="Auto,Auto" RowSpacing="10">

            <!-- Theme switcher -->
            <sf:SfSegmentedControl
                VerticalOptions="Center"
                HorizontalOptions="Center"
                SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}"
                SegmentWidth="40"
                SegmentHeight="40">
                <sf:SfSegmentedControl.ItemsSource>
                    <x:Array Type="{x:Type sf:SfSegmentItem}">
                        <sf:SfSegmentItem ImageSource="{StaticResource IconLight}" />
                        <sf:SfSegmentItem ImageSource="{StaticResource IconDark}" />
                    </x:Array>
                </sf:SfSegmentedControl.ItemsSource>
            </sf:SfSegmentedControl>

            <!-- Logout button -->
            <Button Grid.Row="1"
                    IsVisible="{Binding }"
                    Text="Logout"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    Command="{Binding LogoutCommand}" />
        </Grid>
    </Shell.FlyoutFooter>


</Shell>