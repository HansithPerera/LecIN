<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lecin.Pages.TeacherAttendancePage"
             Title="Attendance %">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="Attendance %" FontSize="28" FontAttributes="Bold" />

            <Entry x:Name="StudentIdEntry" Placeholder="Student ID (GUID)" />

            <!-- Optional date filters
      <Entry x:Name="FromEntry" Placeholder="from (optional, ISO8601)" />
      <Entry x:Name="ToEntry"   Placeholder="to (optional, ISO8601)" />
      -->

            <Button Text="Get Attendance %" Clicked="OnGetAttendanceClicked" />

            <Label x:Name="OverallLabel" FontSize="18" />
            <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />

            <CollectionView x:Name="CourseList" IsVisible="False">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="8,4">
                            <Label Text="{Binding CourseCode}" FontAttributes="Bold" />
                            <Label Text="{Binding TotalsLine}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>