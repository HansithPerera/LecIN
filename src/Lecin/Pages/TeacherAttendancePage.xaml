<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Lecin.Pages.TeacherAttendancePage"
    Title="Attendance %">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Student ID -->
            <Entry x:Name="StudentIdEntry"
                   Placeholder="Student ID (GUID) Example: 49bf8c3d-f7c9-4b2c-862a-9477ddcff815" />

            

            <Button Text="Get Attendance %"
                    Clicked="OnGetAttendanceClicked" />

            <Label x:Name="ErrorLabel"
                   TextColor="Red"
                   IsVisible="False" />

            <Label x:Name="OverallLabel"
                   FontAttributes="Bold"
                   FontSize="20" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>












