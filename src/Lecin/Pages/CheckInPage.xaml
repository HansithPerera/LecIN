<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lecin.Pages.CheckInPage"
             Title="Check In"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">

    <VerticalStackLayout Padding="30" Spacing="30" BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">

        <Label Text="Attendance Check In"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="#7B2CBF"
               HorizontalOptions="Center" />

        <Label Text="Time: 00:00:00"
               x:Name="TimeLabel"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
               HorizontalOptions="Center" />

        <Label Text="Location: Not available"
               x:Name="LocationLabel"
               FontSize="16"
               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
               HorizontalOptions="Center" />

        <Border HeightRequest="{OnIdiom Phone=220, Tablet=260, Desktop=300}"
                BackgroundColor="{AppThemeBinding Light={StaticResource LightSecondaryBackground}, Dark={StaticResource DarkSecondaryBackground}}"
                Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                StrokeThickness="2">
            <Label Text="No Photo"
                   x:Name="PhotoLabel"
                   FontSize="24"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Border>

        <Button Text="Capture Photo"
                x:Name="CaptureButton"
                Clicked="OnCaptureClicked"
                BackgroundColor="#FF6F00"
                TextColor="White"
                FontSize="{OnIdiom Phone=16, Default=18}"
                FontAttributes="Bold"
                HeightRequest="{OnIdiom Phone=48, Default=60}" />

        <Button Text="Confirm Check-In"
                x:Name="ConfirmButton"
                Clicked="OnConfirmClicked"
                BackgroundColor="#7B2CBF"
                TextColor="White"
                FontSize="{OnIdiom Phone=16, Default=18}"
                FontAttributes="Bold"
                HeightRequest="{OnIdiom Phone=48, Default=60}"
                IsEnabled="False" />

    </VerticalStackLayout>
</ContentPage>
