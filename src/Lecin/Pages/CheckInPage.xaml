<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lecin.Pages.CheckInPage"
             Title="Check In"
             BackgroundColor="White">

    <VerticalStackLayout Padding="30" Spacing="30" BackgroundColor="White">

        <Label Text="Attendance Check In"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="#7B2CBF"
               HorizontalOptions="Center" />

        <Label Text="Time: 00:00:00"
               x:Name="TimeLabel"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center" />

        <Label Text="Location: Not available"
               x:Name="LocationLabel"
               FontSize="16"
               TextColor="Black"
               HorizontalOptions="Center" />

        <Border HeightRequest="300"
                BackgroundColor="LightGray"
                Stroke="Gray"
                StrokeThickness="2">
            <Label Text="No Photo"
                   x:Name="PhotoLabel"
                   FontSize="24"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Border>

        <Button Text="Capture Photo"
                x:Name="CaptureButton"
                Clicked="OnCaptureClicked"
                BackgroundColor="#FF6F00"
                TextColor="White"
                FontSize="18"
                FontAttributes="Bold"
                HeightRequest="60" />

        <Button Text="Confirm Check-In"
                x:Name="ConfirmButton"
                Clicked="OnConfirmClicked"
                BackgroundColor="#7B2CBF"
                TextColor="White"
                FontSize="18"
                FontAttributes="Bold"
                HeightRequest="60"
                IsEnabled="False" />

    </VerticalStackLayout>
</ContentPage>
