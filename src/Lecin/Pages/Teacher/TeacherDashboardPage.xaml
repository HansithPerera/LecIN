<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lecin.Pages.Teacher.TeacherDashboardPage"
             Title="Teacher Dashboard">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Welcome Teacher!"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <Label Text="You can view classes, mark attendance, and manage students here."
               FontSize="16"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <Button Clicked="GotoCourseList"
                Text="View Courses">
        </Button>
        <Button Clicked="GotoAttendanceReports"
                Text="Attendance Reports"
                BackgroundColor="#7B2CBF"
                TextColor="White">
        </Button>
    </VerticalStackLayout>
</ContentPage>
