<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="Lecin.Pages.Teacher.TeacherReportsPage"
             Title="Attendance Reports"
             BackgroundColor="#2D1B47">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" BackgroundColor="#2D1B47">

            <Label Text="Attendance Reports"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- Filter Section -->
            <Border Stroke="#7B2CBF"
                    StrokeThickness="2"
                    Padding="15"
                    BackgroundColor="White">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Filters"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#7B2CBF" />

                    <Label Text="Select Course:"
                           FontSize="16"
                           TextColor="White" />
                    <Picker x:Name="CoursePicker"
                            BackgroundColor="Grey" />

                    <Label Text="Date Range:"
                           FontSize="16"
                           TextColor="White" />
                    <HorizontalStackLayout Spacing="10">
                        <DatePicker x:Name="StartDatePicker"
                                    BackgroundColor="Gray"
                                    HorizontalOptions="FillAndExpand" />
                        <Label Text="to"
                               TextColor="White"
                               VerticalOptions="Center" />
                        <DatePicker x:Name="EndDatePicker"
                                    BackgroundColor="Gray"
                                    HorizontalOptions="FillAndExpand" />
                    </HorizontalStackLayout>

                    <Button Text="Generate Report"
                            x:Name="GenerateReportButton"
                            Clicked="OnGenerateReportClicked"
                            BackgroundColor="#7B2CBF"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Border>

            <!-- Overall Statistics -->
            <Border Stroke="#FF6F00"
                    StrokeThickness="2"
                    Padding="15"
                    BackgroundColor="White">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Overall Statistics"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#FF6F00" />

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
                        <Label Text="Total Students:"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="White"
                               Grid.Row="0" Grid.Column="0" />
                        <Label x:Name="TotalStudentsLabel"
                               Text="0"
                               FontSize="14"
                               TextColor="White"
                               Grid.Row="0" Grid.Column="1" />

                        <Label Text="Average Attendance:"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="White"
                               Grid.Row="1" Grid.Column="0" />
                        <Label x:Name="AverageAttendanceLabel"
                               Text="0%"
                               FontSize="14"
                               TextColor="White"
                               Grid.Row="1" Grid.Column="1" />

                        <Label Text="At-Risk Students:"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="White"
                               Grid.Row="2" Grid.Column="0" />
                        <Label x:Name="AtRiskStudentsLabel"
                               Text="0"
                               FontSize="14"
                               TextColor="#D32F2F"
                               FontAttributes="Bold"
                               Grid.Row="2" Grid.Column="1" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- At-Risk Students Section -->
            <Border Stroke="#D32F2F"
                    StrokeThickness="2"
                    Padding="15"
                    BackgroundColor="White">
                <VerticalStackLayout Spacing="10">
                    <Label Text="At-Risk Students"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#D32F2F" />

                    <Label Text="Students with attendance below 75% or 3+ consecutive absences"
                           FontSize="12"
                           TextColor="LightGray"
                           Margin="0,0,0,10" />

                    <CollectionView x:Name="AtRiskStudentsCollection"
                                    EmptyView="No at-risk students found">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="Gray"
                                        StrokeThickness="1"
                                        Padding="10"
                                        Margin="0,5,0,5"
                                        BackgroundColor="#FFF8F8">
                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                        <Label Text="{Binding StudentName}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               Grid.Row="0" Grid.Column="0" />
                                        <Label Text="{Binding AttendancePercentage, StringFormat='{0}%'}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#D32F2F"
                                               Grid.Row="0" Grid.Column="1" />
                                        <Label Text="{Binding RiskReason}"
                                               FontSize="12"
                                               TextColor="Gray"
                                               Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Button Text="Provide Academic Support"
                            x:Name="SupportButton"
                            Clicked="OnProvideSupportClicked"
                            BackgroundColor="#FF6F00"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
