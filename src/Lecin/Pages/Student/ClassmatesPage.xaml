<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Lecin.PageModels.Student"
             x:DataType="viewmodels:ClassmatesPageModel"
             x:Class="Lecin.Pages.Student.ClassmatesPage"
             Title="Classmates"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">

    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="{Binding CourseName}"
               FontAttributes="Bold"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />

        <CollectionView ItemsSource="{Binding Classmates}"
                        ItemSizingStrategy="MeasureAllItems">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:ClassmatesPageModel+StudentInfo">
                    <Frame BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                           BackgroundColor="{AppThemeBinding Light={StaticResource LightSecondaryBackground}, Dark={StaticResource DarkSecondaryBackground}}"
                           CornerRadius="10"
                           Padding="14"
                           Margin="0,6">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Name}"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                            <Label Text="{Binding Email}"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
