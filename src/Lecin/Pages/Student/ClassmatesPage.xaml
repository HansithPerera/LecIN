<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Lecin.PageModels.Student"
             x:DataType="viewmodels:ClassmatesPageModel"
             x:Class="Lecin.Pages.Student.ClassmatesPage"
             Title="Classmates">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="{Binding CourseName}"
               FontAttributes="Bold"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="White" />

        <CollectionView ItemsSource="{Binding Classmates}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="{DynamicResource Primary}"
                           CornerRadius="10"
                           Padding="14"
                           Margin="0,6">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Name}"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   TextColor="White" />
                            <Label Text="{Binding Email}"
                                   FontSize="14"
                                   TextColor="LightGray" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
